<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <!-- <meta http-equiv="refresh" content="3;url=https://play.google.com/store/apps/details?id=com.example.myapp"> -->
    <title>Redirection</title>
</head>
<body>
    <h1>Redirection...</h1>

    <script>
    (function () {
      const INTENT = "intent://open#Intent;scheme=kura;package=com.mathysfornasier.kura;S.browser_fallback_url=" + encodeURIComponent("https://play.google.com/store/apps/details?id=com.mathysfornasier.kura") + ";end";
      const PLAY_STORE = "https://play.google.com/store/apps/details?id=com.mathysfornasier.kura";

      let didHide = false;
      document.addEventListener("visibilitychange", function () {
        if (document.hidden) didHide = true; // l'app a pris le focus
      });

      // Tente d'ouvrir l'app via intent://
      window.location.href = INTENT;

      // Fallback vers le Play Store si rien ne se passe
      setTimeout(function () {
        if (!didHide) {
          window.location.href = PLAY_STORE;
        }
      }, 1400);
    })();
    </script>
  </body>
</html>
